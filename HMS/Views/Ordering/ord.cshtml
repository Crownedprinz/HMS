@model HMS.Models.vw_genlay
@{
    ViewBag.Title = "Ordering";
}

<div>
    <div class="row">
        @if (ViewBag.action_flag == "Edit")
        {
            <div class="col-sm-3 text-right">Item ID</div>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwint0, new { @disabled = "disabled", @maxlength = 10 })
                        </div>
        }

    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Item Name</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring1, new { @class = "form-control mypadding ", maxlength = 30, data_val = "true", data_val_required = "Item Name is required" })
            @Html.ValidationMessageFor(m => m.vwstring1)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Description</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring2, new { @class = "form-control mypadding ", maxlength = 50 })
            @Html.ValidationMessageFor(m => m.vwstring2)
        </div>
    </div>
    <div class="row">
        <div class="text-right col-sm-3">Purpose?</div>
        <div class="col-sm-8 myradioq">
            @Html.RadioButtonFor(m => m.vwstring3, "B", new { @class = "now1 citemtype", @id = "BItem" })
            <label for="Bar">Bar</label>
            @Html.RadioButtonFor(m => m.vwstring3, "K", new { @id = "KItem", @class = "now1 citemtype" })
            <label for="Kitchen">Kitchen</label>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Hotel Logo</div>
        <div class="col-sm-8">
            <input type="file" name="photofiles" />
            <img src="@Url.Action("show", new { id = Model.vwstring0 })" width="100" height="100" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">uom</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring4, new { @class = "form-control mypadding ", maxlength = "50" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">price</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwdecimal0, new { @class = "form-control mypadding numformat", maxlength = "15", data_val = "true", data_val_required = "Phone Number is required" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">quantity</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwint1, new { @class = "form-control mypadding ", maxlength = 15 })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">flat_discount</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwdecimal1, new { @class = "form-control mypadding numformat", maxlength = 15 })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">per_discount</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwdecimal2, new { @class = "form-control mypadding ", maxlength = 15 })
        </div>
    </div>
</div>

