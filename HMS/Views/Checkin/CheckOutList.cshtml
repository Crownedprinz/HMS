@model  IEnumerable<HMS.Models.vw_genlay>
@using anchor1.Helpers
@using HMS.utilities
@{
    ViewBag.Title = "Check Out";
    HMS.utilities.hutility util = new HMS.utilities.hutility();
}

<div class="panel panel-default">
    <div class="panel-heading">
        Check Out List
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">

                <thead>
                    <tr>
                        <th>Guest ID</th>
                        <th>Name</th>
                        <th>Room No</th>
                        <th>Reserved Days</th>
                        <th>Adults</th>
                        <th>Children</th>
                        <th>Check-In Date</th>
                        <th>Check-In Time</th>
                        <th>Expected C/OUt Date</th>
                        @if (@ViewBag.chkval != true)
                        {
                            <th>Actual C/OUt Date</th>
                        }
                        <th>Total Amount</th>
                        <th> Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.vwint0</td>
                            <td>@item.vwstring0</td>
                            <td>@item.vwstring1</td>
                            <td>@item.vwint3</td>
                            <td>@item.vwint1</td>
                            <td>@item.vwint2</td>
                            <td>@util.date_slash(@item.vwstring2)</td>
                            <td>@item.vwstring7</td>
                            <td>@util.date_slash(@item.vwstring3)</td>
                            @if (@ViewBag.chkval != true)
                            {
                                <td>@util.date_slash(@item.vwstring4)</td>
                            }
                            <td class="numformat">@item.vwdecimal0</td>
                            <td><span class="btn btn-danger btn-xs deleteitem" data-keyg="@item.vwint0"> <i class="glyphicon glyphicon-trash "></i> </span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.Hidden("id_xhrt", "K")

<div id="loader2" data-request-ajax2="@Url.Action("delete_list")"></div>
@section Scripts {
    <script>
    </script>
}
