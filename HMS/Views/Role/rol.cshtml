@model HMS.Models.vw_genlay
@{
}
<div class="row">
    <div class="row">
        <div class="col-sm-3 col-sm-text-right">Role ID </div>
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.vwstring0, ViewBag.action_flag == "Edit" ? (object)new { @disabled = "disabled", @class = "form-control mypadding readonly-color" } : new { @maxlength = "10", data_val = "true", data_val_required = "Input an Id", @class = "form-control mypadding " })
                @Html.ValidationMessageFor(model => model.vwstring0)
                @if (ViewBag.action_flag == "Edit") { 
                    @Html.HiddenFor(m=>m.vwstring0)
                }
            </div>
       
    </div>
    <div class="row">
        <div class="col-sm-3 col-sm-text-right">Description</div>
        <div class="col-sm-4">
            @Html.TextBoxFor(model => model.vwstring1, new { @maxlength = "50", data_val = "true", data_val_required = "Description is required", @class = "form-control mypadding " })
            @Html.ValidationMessageFor(model => model.vwstring1)
        </div>
    </div>
    <div class="row rowheader">
        <div class="col-sm-3 col-sm-offset-1">Menu Options</div>
        <div class="col-sm-2 col-sm-offset-1">Selected Options</div>
    </div>
    <div class="row">
        <div class="col-sm-3 col-sm-offset-1">
         @Html.DropDownList("snumber1", ViewBag.list1 as SelectList,new { @class = "basket" , id="list1", size=12, multiple="multiple"})
        </div>
        <div class="col-sm-1 vert-align ">
            <br /><br /><br />
            @*            <input type="image" src='../../images/agt_reload.png'  id="sidearrow"/>*@
            <button type="button" class="btn btn-success col-sm-12 " id="btnx-right"><i class="glyphicon glyphicon-chevron-right"></i>  </button><br /><br /><br />
            <button type="button" class="btn btn-warning col-sm-12 " id="btnx-left"><i class="glyphicon glyphicon-chevron-left"></i>  </button><br />
        </div>
        <div class="col-sm-3 ">
            @*<select class="form-control mypadding " id="list2" name="snumber2" size=10 multiple="multiple"> <option value=""></option> </select>*@
             @Html.DropDownList("snumber2", ViewBag.list2 as SelectList,new { @class = "basket" , id="list2" , size=12, multiple="multiple", rows =6})
        </div>
    </div>
</div>