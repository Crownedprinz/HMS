@model HMS.Models.vw_genlay
@{
    ViewBag.Title = "Staff";
}

<div>
    <div class="row">
        @if (ViewBag.action_flag == "Edit")
        {
            <div class="col-sm-3 text-right">Staff ID</div>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwint0, new { @disabled = "disabled", @maxlength = 10 })
                        </div>
        }

    </div>
    <div class="row">
        <div class="col-sm-3 text-right">First Name</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring0, new { @class = "form-control mypadding ", maxlength = 30, data_val = "true", data_val_required = "Staff First Name is required" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Surname</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring1, new { @class = "form-control mypadding ", maxlength = 20, data_val = "true", data_val_required = "Surname is required" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Staff Photo</div>
        <div class="col-sm-8">
            <input type="file" name="photofiles" />
            <img src="@Url.Action("show", new { id = @Model.vwint0 })" width="100" height="100" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 text-right">Job Role</div>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring2, ViewBag.role as SelectList, "Select", new { @class = "form-control mypadding"})
            </div>
    </div>


    <div class="row">
        <div class="col-sm-3 text-right">Email</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring3, new { @class = "form-control mypadding ", maxlength = "50" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Phone</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring4, new { @class = "form-control mypadding ", maxlength = "15", data_val = "true", data_val_required = "Phone Number is required" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Address</div>
        <div class="col-sm-3">
            @Html.TextAreaFor(m => m.vwstring5, new { @class = "form-control mypadding", rows = "6" })
 </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Gender</div>
        <div class="col-sm-7 myradioq">
            @Html.RadioButtonFor(m => m.vwstring6, "M", new { @id = "yes" })
            <label for="yes">Male</label>
            @Html.RadioButtonFor(m => m.vwstring6, "F", new { @id = "no" })
            <label for="no">Female</label>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-3 text-right">City</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring7, new { @class = "form-control mypadding ", maxlength = "20" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">State</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring8, new { @class = "form-control mypadding ", maxlength = "50" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Country</div>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring9, ViewBag.country as SelectList, "Select", new { @class = "form-control mypadding", id = "con" })
        </div>
    </div>
</div>

