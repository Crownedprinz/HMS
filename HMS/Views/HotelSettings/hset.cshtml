@model HMS.Models.vw_genlay
@{
    ViewBag.Title = "Hotel Settings";
}


<div>
    <div class="row">
        <div class="col-sm-3 text-right">Company ID</div>
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.vwstring0, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control mypadding", @maxlength = 10 } : new { @disabled = "disabled", @maxlength = 10 })
            @Html.ValidationMessageFor(m => m.vwstring0)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-right">Company Name</div>
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.vwstring1, new { @class = "form-control mypadding", maxlength = 50, data_val = "true", data_val_required = "Company Name is required" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Hotel Logo</div>
        <div class="col-sm-8">
            <input type="file" name="photofiles" />
            <img src="@Url.Action("show", new { id = "HInfo" })" width="100" height="100" />
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Business Registration Number</div>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.vwstring2, new { @class = "form-control mypadding", maxlength = 50, data_val = "true", data_val_required = "Business Registration Number is required" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Country of Operations</div>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring3, ViewBag.country as SelectList, "Select", new { @class = "form-control mypadding", id = "con", data_val = "true", data_val_required = "Please Select a Country" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Address</div>
        <div class="col-sm-6">
            @Html.TextAreaFor(m => m.vwstring4, new { @class = "form-control mypadding", maxlength = 100, rows="3" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">City</div>
        <div class="col-sm-5">

            @Html.TextBoxFor(m => m.vwstring5, new { @class = "form-control mypadding", maxlength = 50 })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">State/Province</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring6, new { @class = "form-control mypadding", maxlength = 20 }) </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Email</div>
        <div class="col-sm-5">

            @Html.TextBoxFor(m => m.vwstring7, new { @class = "form-control mypadding", maxlength = 50, type = "email" })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Phone Number</div>
        <div class="col-sm-3">

            @Html.TextBoxFor(m => m.vwstring8, new { @class = "form-control mypadding", maxlength = 20 })
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-3 text-right">Early Checkin Time</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.vwstring9, new { @class = "form-control mypadding timet", maxlength = 20, @PlaceHolder = "HH:MM AM", data_val = "true", data_val_required = "Early Checkin Time required" })
        </div>
    </div>
    </div>